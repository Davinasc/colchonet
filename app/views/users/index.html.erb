<h1><%= t '.title' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.full_name' %></th>
      <th><%= t '.bio' %></th>
      <th><%= t '.email' %></th>
      <th><%= t '.location' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.bio %></td>
        <td><%= user.email %></td>
        <td><%= user.location %></td>
        <td><%= link_to t('links.show'), user %></td>
        <td><%= link_to t('links.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('links.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_user_path %>

<%= link_to t('links.home'), root_path %>